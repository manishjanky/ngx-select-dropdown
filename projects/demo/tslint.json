{
  "extends": ["tslint:recommended"],
  "rulesDirectory": ["./../../node_modules/codelyzer"],
  "rules": {
    "component-class-suffix": false,
    "directive-class-suffix": false,
    "interface-name": false,
    "invoke-injectable": false,
    "max-line-length": [false, 100],
    "no-access-missing-member": false,
    "no-attribute-parameter-decorator": false,
    "no-console": [false, "time", "timeEnd", "trace"],
    "no-forward-ref": false,
    "no-input-rename": false,
    "no-output-rename": false,
    "no-string-literal": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "pipe-naming": [false, "camelCase", "my"],
    "quotemark": [false, "single", "avoid-escape"],
    "trailing-comma": [false, {"multiline": "always", "singleline": "never"}],
    "use-host-property-decorator": false,
    "use-input-property-decorator": false,
    "use-output-property-decorator": false,
    "use-pipe-transform-interface": false,
    "variable-name": [false, "allow-leading-underscore", "ban-keywords", "check-format"]
  }
}